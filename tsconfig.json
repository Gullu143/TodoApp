{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": [
      "nativewind/types",
      "react-native-svg" // Ensure this is here for correct SVG typing
    ],
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}